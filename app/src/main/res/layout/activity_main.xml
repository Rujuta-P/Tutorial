<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity"
        android:padding="10dp">
    <Button
            android:text="Show Toast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="144dp" android:layout_alignParentTop="true" android:id="@+id/btnShowToast"
            android:layout_marginTop="93dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your Message"
            android:ems="10"
            android:id="@+id/etUserMessage" android:layout_alignParentEnd="true" android:layout_alignParentTop="true"
            android:layout_marginEnd="5dp" android:layout_marginTop="191dp"/>
    <Button
            android:text="Send Data to Next Activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" android:layout_marginEnd="7dp"
            android:id="@+id/btnSendMsgToNextActivity"
            android:layout_marginTop="270dp"/>
    <Button
            android:text="Share to other Apps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="0dp" android:layout_alignParentBottom="true"
            android:id="@+id/btnShareToOtherApps"
            android:layout_marginBottom="196dp"/>
    <Button
            android:text="Recycler View Demo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="113dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/btnRecyclerViewDemo"
            android:layout_marginBottom="108dp"/>
</RelativeLayout>